[settings]
arch=x86_64
build_type=Release
compiler=gcc
compiler.cppstd=20
compiler.libcxx=libstdc++11
compiler.version=14
os=Linux

[buildenv]
CC=gcc-14
CXX=g++-14

[conf]
tools.build:cxxflags=["-fsanitize=address,undefined", "-fsanitize-address-use-after-scope", "-fno-omit-frame-pointer"]
tools.build:cflags=["-fsanitize=address,undefined", "-fsanitize-address-use-after-scope", "-fno-omit-frame-pointer"]
tools.build:exelinkflags=["-fsanitize=address,undefined"]
tools.build:sharedlinkflags=["-fsanitize=address,undefined"]
tools.info.package_id:confs=["tools.build:cxxflags", "tools.build:cflags", "tools.build:exelinkflags", "tools.build:sharedlinkflags"]

